<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ConfirmOrderActivity"
    tools:showIn="@layout/app_bar_confirm_order">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/confirm_order"
        android:gravity="center">

        <TextView
            android:id="@+id/confirm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Оформлення замовлення"
            android:textSize="20sp"
            android:layout_marginBottom="30dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/confirm_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ваше ім'я та прізвище"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/confirm_title"/>

        <EditText
            android:id="@+id/confirm_name"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@+id/confirm_name_title"
            android:hint="Ім'я та прізвище"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fields"/>

        <TextView
            android:id="@+id/confirm_phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ваш мобільний телефон"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/confirm_name"/>

        <EditText
            android:id="@+id/confirm_phone"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="Телефон"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fields"
            android:layout_below="@+id/confirm_phone_title"/>

        <TextView
            android:id="@+id/confirm_city_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Місто доставки"
            android:textStyle="italic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/confirm_phone"/>

        <EditText
            android:id="@+id/confirm_city"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="Місто"
            android:padding="15dp"
            android:background="@drawable/fields"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/confirm_city_title"/>

        <TextView
            android:id="@+id/confirm_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Адреса доставки"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/confirm_city"/>

        <EditText
            android:id="@+id/confirm_address"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="Адреса"
            android:padding="15dp"
            android:layout_below="@id/confirm_address_title"
            android:background="@drawable/fields"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <Button
        android:id="@+id/confirm_order"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttons"
        android:text="Оформити замовлення"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

</RelativeLayout>